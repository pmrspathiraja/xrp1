@using XRP.Domain.Entity
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@model Users
@{
    Layout = "~/Views/Shared/_HomeLayout1.cshtml";
    ViewData["Title"] = "Credit Score";
}
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
                   
                    <div class="container">
                        <h1 style="font-size:30px;margin-bottom:15px;">Credit Score : @Model.CreditScore</h1>
                        <canvas id="myChart" width="400" height="400">
                           
                        </canvas>

                        <div class="info">
                            <h2>Rules</h2>
                            <p>
                                Credit score is automatically maintained by the system based on your daily shipments. If a member does not work on any given day, the credit score will decrease accordingly.

                                To be eligible for withdrawal, a minimum credit score of 100 is required.
                                If the score drops, you will need to increase it manually.
                            </p>
                        </div>
                    </div>

<script>
    const data = {
        labels: ['My Score', 'Remaining'],
        datasets: [{
            label: 'Score',
            data: [@Model.CreditScore, 100 - @Model.CreditScore],
            backgroundColor: [
                'rgb(52, 232, 39)',
                'rgb(232, 84, 39)',
            ],
            hoverOffset: 4
        }]
    };

    const ctx = document.getElementById('myChart').getContext('2d');
    new Chart(ctx, {
        type: 'doughnut', // or 'pie'
        data: data,
        options: {
            responsive: true,
            plugins: {
                legend: {
                    position: 'top',
                }
            }
        }
    });
</script>
@using XRP.Domain.Entity
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@model Users
<div style="margin-top:80px" class="p-page__section theme--light  no-print" data-deep-link="ThreeActionCardsContainer" data-r-name="Three Action Cards Container" data-r-ds="Three Action Cards Container - New user support" data-r-rule="true">
    <div class="p-page__section__outer">
        <div class="p-page__section__inner ">
            <div class="p-section__action-cards p-section__action-cards--3  p-page__section__child">

                <div style="text-align: center;">
                    <h2 style="font-weight: bold; font-size: 28px;">Shipment Count : @Model.BookingCount</h2>
                    <p>The reservation information is displayed in detail for your viewing</p>

                    <!-- Stats Boxes -->
                    <div style="display: flex; justify-content: center; flex-wrap: wrap; gap: 20px; margin-top: 20px;">
                        <div style="border: 1px solid #eee; padding: 20px 40px; border-radius: 10px; min-width: 150px;">
                            <div style="font-size: 24px; font-weight: bold;">₹ @Model.LevelBonus</div>
                            <div>Trial Bonus</div>
                        </div>
                        <div style="border: 1px solid #eee; padding: 20px 40px; border-radius: 10px; min-width: 150px;">
                            <div style="font-size: 24px; font-weight: bold;">₹ @Model.TotalBalance</div>
                            <div>Balance</div>
                        </div>
                        <div style="border: 1px solid #eee; padding: 20px 40px; border-radius: 10px; min-width: 150px;">
                            <div style="font-size: 24px; font-weight: bold;">₹ @Model.TodayCommission</div>
                            <div>Today commission</div>
                        </div>
                        <div style="border: 1px solid #eee; padding: 20px 40px; border-radius: 10px; min-width: 150px;">
                            <div style="font-size: 24px; font-weight: bold;">₹ @Model.PendingAmount</div>
                            <div>Pending Amount</div>
                        </div>
                    </div>

                    <!-- Buttons -->
                    <div style="margin: 30px 0;">
                        <button onclick="onclickdep()" style="background: white; padding: 10px 25px; border-radius: 25px; border: 2px solid orange; margin-right: 15px; font-weight: bold; box-shadow: 2px 2px 5px #ffa500;cursor: pointer;">Deposit</button>
                        <button onclick="onclickwid()" style="background: white; padding: 10px 25px; border-radius: 25px; border: 2px solid orange; font-weight: bold; box-shadow: 2px 2px 5px #ff7373;cursor: pointer;">Withdraw</button>
                    </div>

                    <!-- Bottom Card -->
                  @*   <div style="border: 1px solid #eee; border-radius: 10px; padding: 20px; max-width: 600px; margin: 0 auto;">
                        <div style="display: flex; justify-content: space-between; align-items: center;">
                            <div>
                                <div style="font-size: 24px; font-weight: bold;">₹ 0</div>
                                <div>Trial Bonus</div>
                            </div>
                            <select style="padding: 5px 10px; border-radius: 5px;">
                                <option>Select</option>
                            </select>
                        </div>
                        <hr style="margin: 15px 0;">
                        <p>There is no Data</p>
                    </div> *@
                </div>

            </div>
        </div>
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<script src="~/assets/toast/js/jquery.toast.js"></script>
<script>
    function onclickdep() {
        window.location.href = "/Home/Contact";
    }

    function onclickwid() {
        var isShotUser = '@Model.Level';

        if (isShotUser == 'True') { 
            var bookinfCount = @Model.BookingCount;
            if (bookinfCount == 20 || bookinfCount == 38 || bookinfCount == 56 || bookinfCount == 78 || bookinfCount == 18  || bookinfCount == 36 || bookinfCount == 54 || bookinfCount == 76) {
                window.location.href = "/Home/Withdrawals";
            } else {
                $.toast({
                    heading: 'Error',
                    text: 'Please complete all the booking before apply to the Withdrawals',
                    showHideTransition: 'slide',
                    icon: 'error',
                    position: 'mid-center'
                })
            }
        }else{
            var bookinfCount = @Model.BookingCount;
            if (bookinfCount == 18 || bookinfCount == 20 || bookinfCount == 36 || bookinfCount == 54 || bookinfCount == 76) {
                window.location.href = "/Home/Withdrawals";
            } else {
                $.toast({
                    heading: 'Error',
                    text: 'Please complete all the booking before apply to the Withdrawals',
                    showHideTransition: 'slide',
                    icon: 'error',
                    position: 'mid-center'
                })
            }
        }
        
    }
</script>